# Aliases and useful functions
alias b='cd ../'
alias bb='cd ../../'
alias bbb='cd ../../../'
alias bbbb='cd ../../../../'
alias bbbbb='cd ../../../../../'
alias be='bundle exec'
alias bea='bundle exec annotate --position before'
alias cdw='cd ~/workspace'
alias rmts='find . -name \*.h -or -name \*.c -or -name \*.cpp -or -name \*.m -or -name \*.mm -or -name \*.rb -or -name \*.js -or -name \*.coffee | xargs sed -i "" "s/[ ]*$//g"'

function goto_bundle() {
  cd `bundle show $1`
}
