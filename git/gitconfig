[alias]
	br = branch
	ci = commit
	co = checkout
	df = diff
	st = status
	ls = ls-files
	w = whatchanged

[apply]
    whitespace = fix

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	#meta = yellow bold
	#frag = magenta bold
	#old = red bold
	#new = green bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	editor = emacs
	pager = less -FRSX
	whitespace = fix, -indent-with-non-tab, trailing-space, cr-at-eol

[push]
	default = tracking

